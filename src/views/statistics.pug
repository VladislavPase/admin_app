extends _includes/layout
include _includes/mixins/accountInfoItem
include _includes/mixins/filter
include _includes/mixins/table
include _includes/mixins/tableSettings
include _includes/mixins/calendar
    
block config
    
    - var pagetitle = 'Статистика'
    - var bodyClass = 'statistics'
    - var pageName = 'Статистика'
    - var name = 'statistics'
    - var headerIcon = 'icon-statistics-icon'

block content
    .content
        .content__inner
            .account-info__wrapper
                .account-info.large
                    +infoItem(
                        title="Доступно"
                        value=1000
                        type="cash"
                        subclass="green-text"
                    )
                    +infoItem(
                        title="В ожидании"
                        value=0
                        type="cash"
                    )
                    +infoItem(
                        title="Всего"
                        value=1000
                        type="cash"
                        subclass="green-text"
                    )
                    +infoItem(
                        title="Выплачено"
                        value=0
                        type="cash"
                    )
            .statistics__table
                form.statistics__table--form()
                    .statistics__table--filters
                        +calendar()
                        +filter(
                            name="stream"
                            title="Поток"
                            type="checkbox"
                            options=[
                                {
                                    id: 123123123,
                                    option: 'Поток1',
                                    value: 'stream_1'
                                },
                                {
                                    id: 12312,
                                    option: 'Поток2',
                                    value: 'stream_2'
                                },
                                {
                                    id: 123125,
                                    option: 'Поток3',
                                    value: 'stream_3'
                                },
                                {
                                    id: 1231252,
                                    option: 'Поток4',
                                    value: 'stream_4'
                                },
                                {
                                    id: 12312532,
                                    option: 'Поток5',
                                    value: 'stream_5'
                                }
                            ]
                        )
                        +filter(
                            name="article"
                            title="Статья"
                            type="checkbox"
                            options=[
                                {
                                    id: 123123123,
                                    option: 'Статья1',
                                    value: 'article_1'
                                },
                                {
                                    id: 12312,
                                    option: 'Статья2',
                                    value: 'article_2'
                                },
                                {
                                    id: 123125,
                                    option: 'Статья3',
                                    value: 'article_3'
                                }
                            ]
                        )
                        +filter(
                            name="design"
                            title="Дизайн"
                            type="checkbox"
                            options=[
                                {
                                    id: 123123123,
                                    option: 'Дизайн1',
                                    value: 'design_1'
                                },
                                {
                                    id: 12312,
                                    option: 'Дизайн2',
                                    value: 'design_2'
                                }
                            ]
                        )
                        +filter(
                            name="type"
                            title="Тип страницы"
                            type="checkbox"
                            options=[
                                {
                                    id: 123123123,
                                    option: 'Тип страницы 1',
                                    value: 'page_type_1'
                                },
                                {
                                    id: 12312,
                                    option: 'Тип страницы 2',
                                    value: 'page_type_2'
                                },
                                {
                                    id: 123125,
                                    option: 'Тип страницы 3',
                                    value: 'page_type_3'
                                }
                            ]
                        )
                        +filter(
                            name="device"
                            title="Устройство"
                            type="checkbox"
                            options=[
                                {
                                    id: 123123123,
                                    option: 'Устройство 1',
                                    value: 'device_1'
                                },
                                {
                                    id: 12312,
                                    option: 'Устройство 2',
                                    value: 'device_2'
                                },
                                {
                                    id: 123125,
                                    option: 'Устройство 3',
                                    value: 'device_3'
                                }
                            ]
                        )
                        .fieldset
                            input.input(name="sid_1" type="text")
                            label.label(for="sid_1") sid_1
                        .fieldset
                            input.input(name="sid_2" type="text")
                            label.label(for="sid_2") sid_2
                        .fieldset
                            input.input(name="sid_1" type="text")
                            label.label(for="sid_3") sid_3
                        .fieldset
                            input.input(name="sid_1" type="text")
                            label.label(for="sid_4") sid_4
                    .statistics__table--actions
                        .statistics__table--buttons
                            button(type="submit").btn.btn-primary ПРИМЕНИТЬ
                            button(type="button").btn.btn-outlined ОЧИСТИТЬ
                        .statistics__table--settings
                            .settings-item.setting-trigger
                                a(href="#").statistics__table--settings-link
                                    .icon-calendar.icon
                                    span Настроить поля в таблице
                                    .icon-down-dir
                                .table-settings.dropdown-body
                                    .triangle-with-shadow
                                    .settings-wrapper.dropdown-wrapper
                                        +dropdownItem(
                                            title="Дата"
                                            id="table_date"
                                            value="table_date"
                                        )
                                        +dropdownItem(
                                            title="Переходы"
                                            id="redirect"
                                            value="redirect"
                                        )
                                        +dropdownItem(
                                            title="Уники"
                                            id="uniques"
                                            value="uniques"
                                        )
                                        +dropdownItem(
                                            title="Показы"
                                            id="shows"
                                            value="shows"
                                        )
                                        +dropdownItem(
                                            title="Клики"
                                            id="clicks"
                                            value="clicks"
                                        )
                                        +dropdownItem(
                                            title="CTR"
                                            id="ctr"
                                            value="ctr"
                                        )
                                        +dropdownItem(
                                            title="Лиды"
                                            id="leads"
                                            value="leads"
                                        )
                                        +dropdownItem(
                                            title="CR"
                                            id="cr"
                                            value="cr"
                                        )
                                        +dropdownItem(
                                            title="Аппрув"
                                            id="approval"
                                            value="approval"
                                        )
                                        +dropdownItem(
                                            title="Доход"
                                            id="income"
                                            value="income"
                                        )
                                        +dropdownItem(
                                            title="Домонетизировано"
                                            id="domonetization"
                                            value="domonetization"
                                        )
                                        +dropdownItem(
                                            title="В ожидании"
                                            id="waiting"
                                            value="waiting"
                                        )
                            .settings-item
                                a(href="#").statistics__table--settings-link
                                    .icon-export.icon
                                    span Экспорт CSV
                .statistics__data
                    .table-wrapper
                        +table()
                    .pagination-wrapper
                        include _includes/blocks/renderCount
                        include _includes/blocks/pagination
