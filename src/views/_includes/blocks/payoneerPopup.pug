.popup#payoneer
    .popup__close(data-fancybox-close)
        span
        span
    .popup__inner
        h2.popup__title Выплата на Payonner
        form.form.popup__form.finances-form(method="post")
            .fieldset
                input.input(name="payoneer_sum" type="text" required)#payoneer_sum
                label.label(for="payoneer_sum") Сумма выплаты в рублях 
                    span *
            .fieldset
                input.input(name="payoneer_email" type="text" required)#payoneer_email
                label.label(for="payoneer_email") E-mail 
                    span *
            button.btn-primary.btn Заказать выплату
