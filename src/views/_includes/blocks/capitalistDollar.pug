.popup#capitalistDollar
    .popup__close(data-fancybox-close)
        span
        span
    .popup__inner
        h2.popup__title Выплата на Capitalist $
        form.form.popup__form.finances-form(method="post")
            .fieldset
                input.input(name="pay_sum" type="text" required)#pay_sum
                label.label(for="pay_sum") Сумма выплаты в рублях 
                    span *
            .fieldset
                input.input(name="wallet_num" type="text" required)#wallet_num
                label.label(for="wallet_num") Номер кошелька Capitalist 
                    span *
            .fieldset
                input.input(name="dollar_convert" type="text" required disabled value="$0")#dollar_convert
                label.label(for="dollar_convert") В итоге вы получите
            button.btn-primary.btn Заказать выплату
